<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.eql.safe" >


    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:name=".EqlApplication"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.photo.ChooseImgActivity"
            android:label="@string/title_activity_choose_img" >
        </activity>
        <activity
            android:name=".ui.photo.PhotoViewerActivity"
            android:label="@string/title_activity_photo_viewer" >
        </activity>
        <activity
            android:name=".ui.photo.AlbumListActivity"
            android:label="@string/title_activity_album_list" >
        </activity>
        <activity
            android:name=".ui.photo.PhotoGridActivity"
            android:label="@string/title_activity_photo_grid" >
        </activity>
        <activity android:name=".ui.photo.ChoosePhotoListActivity"
            android:label="@string/title_activity_choose_img"
            >

        </activity>
        <activity android:name=".ui.photo.ChoosePhotoGridActivity"
            android:label="@string/title_activity_choose_img"
            >

        </activity>

    </application>

</manifest>
